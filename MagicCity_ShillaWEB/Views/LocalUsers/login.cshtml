@{
    Layout = "_LayoutAuth";
}
<div class="row login-row-height">
    <div class="col-12 col-md-6 col-lg-7 d-none d-md-flex"></div>
    <div class="col-12 col-md-6 col-lg-5 col-xl-4  align-self-center">
        <div class="card border-0 shadow-lg blur">
            <div class="card-body py-5">
                <h5 class="font-weight-light mb-1 text-mute-high">Welcome,</h5>
                <h3 class="font-weight-normal mb-4">Please Sign In</h3>
                <div class="card  mb-2 overflow-hidden">
                    <div class="card-body p-0">
                        <label for="inputEmail" class="sr-only">Email address</label>
                        <input type="email" id="inputEmail" class="form-control rounded-0 border-0" placeholder="Email address" required="" autofocus="">
                        <hr class="my-0">
                        <label for="inputPassword" class="sr-only">Password</label>
                        <input type="password" id="inputPassword" class="form-control rounded-0 border-0" placeholder="Password" required="">
                    </div>
                </div>
                <div class="my-3 row">
                    <div class="col-12 col-md py-1">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="customCheck1" checked="">
                            <label class="custom-control-label" for="customCheck1">Remember Me</label>
                        </div>
                    </div>
                    <div class="col-12 col-md py-1 text-left text-md-right">
                        <a href="resetpassword.html" class="template-primary">Forgot Password?</a>
                    </div>
                </div>
                <div class="mb-4">
                    <a href="dashboard-production.html" class=" btn btn-primary btn-block">Sign In <i class="material-icons md-18">arrow_forward</i></a>
                </div>
                <div class="">
                    <p class="text-mute">
                        Do not have account yet?<br>
                        Please <a href="signup1.html" class="text-template-primary-light">Sign up</a> here.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>